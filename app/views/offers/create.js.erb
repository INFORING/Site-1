<% if @offer.errors.any? %>
$('#flash').html("<%= escape_javascript(render partial: 'shared/flash_messages', flash: flash) %>");
<% else %>
$('#OfferCreateModal').modal('hide');
$('body').removeClass('modal-open');
$('.modal-backdrop').remove();
$('#offers-tab').html("<%= escape_javascript(render partial: 'offers/admin_offers', locals: {:@offers => @offers}) %>");
<% end %>