<% if @deliver == 1 %>
	$('#OfferOrderModal').modal('hide');
	$('body').removeClass('modal-open');
	$('.modal-backdrop').remove();
	<%- if @payment == "Предоплата"%>
		$('#OfferPayment').html("<%= escape_javascript(render partial: 'offers/payment_modal') %>");
		$('#OfferPaymentModal').modal('show');
	<%- end%>
<% else %>
	$('#flash').html("<%= escape_javascript(render partial: 'shared/flash_messages', flash: flash) %>");
<% end %>