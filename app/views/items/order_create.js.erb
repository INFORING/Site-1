<% if @deliver == 1 %>
	$('#ItemOrderModal').modal('hide');
	$('body').removeClass('modal-open');
	$('.modal-backdrop').remove();
	<%- if @payment == "Предоплата"%>
		$('#ItemPayment').html("<%= escape_javascript(render partial: 'items/payment_modal', locals: {:@item => @item}) %>");
		$('#ItemPaymentModal').modal('show');
	<%- end%>
<% else %>
	$('#flash').html("<%= escape_javascript(render partial: 'shared/flash_messages', flash: flash) %>");
<% end %>